<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.uclan.ashleymorris.goeat.activities.authentication.LoginActivity"
    android:id="@+id/background"
    android:background="#59ABE3">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:padding="16dp"
            android:bottomRightRadius="10dp"
            android:bottomLeftRadius="10dp"
            android:topLeftRadius="10dp"
            android:topRightRadius="10dp"
            android:background="@drawable/rounded_background"
            android:id="@+id/linearLayout">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edittext_username"
                android:singleLine="false"
                android:selectAllOnFocus="false"
                android:phoneNumber="false"
                android:password="false"
                android:hint="Username"
                android:textIsSelectable="false"
                android:background="@drawable/rounded_textview"
                android:paddingLeft="12dp"
                android:paddingRight="8dp"
                android:layout_marginBottom="12dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/edittext_password"
                android:singleLine="false"
                android:selectAllOnFocus="false"
                android:phoneNumber="false"
                android:password="false"
                android:hint="Password"
                android:background="@drawable/rounded_textview"
                android:paddingLeft="12dp"
                android:paddingRight="8dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:text="Log in"
                android:id="@+id/button_login"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:background="@drawable/light_theme_button"
                android:textColor="#ffff" />

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="No acount? Sign Up"
            android:id="@+id/textbutton_register"
            android:textSize="18dp"
            android:paddingRight="4dp"
            android:paddingLeft="4dp"
            android:gravity="center"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:layout_marginTop="12dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView_restaurant"
            android:src="@drawable/goeat_logo1"
            android:layout_above="@+id/linearLayout"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</RelativeLayout>
