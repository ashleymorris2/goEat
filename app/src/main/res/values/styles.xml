<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/ActionBarTheme2</item>
    </style>

    <style name="ActionBarTheme1" parent="android:Widget.ActionBar">
        <item name="android:background">#22313F</item>
        <item name="android:titleTextStyle">@style/ActionBarFont1</item>
    </style>

    <style name="ActionBarFont1">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Alternative style-->
    <style name="ActionBarTheme2" parent="android:Widget.ActionBar">
        <item name="android:background">@color/MainTextColour</item>
        <item name="android:titleTextStyle">@style/ActionBarFont2</item>
    </style>

    <style name="ActionBarFont2">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
